{
  "bin": {
    "ecommerce": "bin/ecommerce.js"
  },
  "description": "An e-commerce project used to explore event-based APIs and microservices.",
  "dependencies": {
    "@aws-sdk/client-api-gateway": "3.687.0",
    "@aws-sdk/client-cognito-identity-provider": "3.687.0",
    "@aws-sdk/client-dynamodb": "3.687.0",
    "@aws-sdk/client-s3": "3.689.0",
    "@aws-sdk/lib-dynamodb": "3.689.0",
    "@effect/schema": "0.75.5",
    "@sindresorhus/is": "7.0.1",
    "aws-cdk-lib": "2.166.0",
    "constructs": "10.4.2",
    "effect": "3.10.14",
    "envalid": "8.0.0",
    "fast-check": "3.23.1",
    "nanoid": "5.0.8",
    "openid-client": "6.1.3",
    "pkg-dir": "8.0.0",
    "source-map-support": "0.5.21"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@commitlint/cli": "19.5.0",
    "@commitlint/config-conventional": "19.5.0",
    "@faker-js/faker": "9.2.0",
    "@release-it/conventional-changelog": "9.0.3",
    "@types/aws-lambda": "8.10.145",
    "@types/debug": "4.1.12",
    "@types/node": "20.17.6",
    "@vitest/coverage-v8": "2.1.4",
    "aws-cdk": "2.166.0",
    "del-cli": "6.0.0",
    "dotenv": "16.4.5",
    "fishery": "2.2.2",
    "husky": "9.1.6",
    "lint-staged": "15.2.10",
    "pactum": "3.7.3",
    "release-it": "17.10.0",
    "testdouble": "3.20.2",
    "tsx": "4.19.2",
    "typescript": "5.6.3",
    "vitest": "2.1.4"
  },
  "name": "ecommerce",
  "scripts": {
    "build": "tsc",
    "build:ci": "npm run clean && npm test && tsc",
    "cdk": "NODE_ENV=production cdk",
    "clean": "del-cli coverage",
    "format": "biome format --write --no-errors-on-unmatched .",
    "lint": "biome lint --no-errors-on-unmatched .",
    "lint:fix": "biome lint --apply --no-errors-on-unmatched .",
    "prepack": "npm run build",
    "prepare": "husky",
    "release": "release-it --ci",
    "test": "vitest run --dir test/unit --config ./vite.config.unit.ts",
    "test:cov": "vitest run --coverage --dir test/unit --config ./vite.config.unit.ts",
    "test:watch": "vitest --dir test/unit --config ./vite.config.unit.ts",
    "test:e2e": "vitest run --dir test/e2e --config ./vite.config.e2e.ts",
    "test:e2e:watch": "vitest --dir test/e2e --config ./vite.config.e2e.ts",
    "watch": "tsc -w"
  },
  "type": "module",
  "version": "0.0.0"
}
